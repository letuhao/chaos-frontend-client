{
  "name": "chaos-world-game",
  "version": "0.1.0",
  "description": "A cultivation RPG inspired by Tale of Immortal, built with Unity WebGL + HTML/CSS",
  "main": "web-assets/src/js/game-ui.js",
  "scripts": {
    "dev": "webpack serve --mode development",
    "dev:debug": "webpack serve --mode development --progress --verbose",
    "dev:inspect": "node --inspect-brk node_modules/.bin/webpack serve --mode development",
    "build": "webpack --mode production",
    "build:debug": "webpack --mode production --progress --verbose",
    "build:unity": "node scripts/build-unity.js",
    "build:web": "webpack --mode production",
    "build:all": "npm run build:unity && npm run build:web",
    "deploy": "node scripts/deploy.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:performance": "node tests/performance/run-tests.js",
    "lint": "eslint web-assets/src/**/*.{js,ts}",
    "lint:css": "stylelint web-assets/src/css/**/*.css",
    "format": "prettier --write web-assets/src/**/*.{js,ts,css,html}",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "analyze": "webpack-bundle-analyzer builds/webgl/static/js/*.js",
    "mobile:test": "node scripts/test-mobile.js",
    "steam:setup": "node scripts/steam-setup.js",
    "serve:static": "cd builds/webgl && python -m http.server 3200",
    "debug:server": "node --inspect-brk ./node_modules/.bin/webpack serve --mode development"
  },
  "keywords": [
    "game",
    "rpg",
    "cultivation",
    "unity",
    "webgl",
    "html5",
    "steam"
  ],
  "author": "Chaos World Team",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@playwright/test": "^1.40.0",
    "@types/node": "^24.5.2",
    "babel-loader": "^9.1.0",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^29.7.0",
    "mini-css-extract-plugin": "^2.7.0",
    "prettier": "^3.0.3",
    "style-loader": "^3.3.0",
    "stylelint": "^15.10.0",
    "stylelint-config-standard": "^34.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.2",
    "webpack": "^5.89.0",
    "webpack-bundle-analyzer": "^4.10.0",
    "webpack-cli": "^5.1.0",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "lodash": "^4.17.21",
    "process": "^0.11.10"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/chaos-world-game.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/chaos-world-game/issues"
  },
  "homepage": "https://chaos-world-game.com"
}